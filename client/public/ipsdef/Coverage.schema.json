{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/ipsdef/Coverage.schema.json",
    "title": "NPS Coverage",
    "type": "object",
    "required": [
      "resourceType",
      "id",
      "beneficiary",
      "payor"
    ],
    "properties": {
      "resourceType": {
        "const": "Coverage"
      },
      "id": {
        "type": "string",
        "pattern": "^[A-Za-z0-9\\-\\.]{1,64}$",
        "description": "simple ids preferred",
        "examples": ["cov1, cov2...covN"]
      },
      "status": {
        "type": "string",
        "enum": ["active", "cancelled", "draft", "entered-in-error"],
        "default": "active"
      },
      "subscriberId": {
        "type": ["string", "null"]
      },                                    
      "beneficiary": {
        "type": "object",
        "required": ["reference"],
        "properties": {
          "reference": {
            "type": "string",
            "pattern": "^Patient\\/[A-Za-z0-9\\-\\.]+$"
          }
        }
      },
      "payor": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["display"],
          "properties": {
            "display": {
              "type": "string"
            }
          }
        }
      }
    },
    "additionalProperties": false
  } 
  