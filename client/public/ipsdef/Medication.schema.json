{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/ipsdef/Medication.schema.json",
    "title": "IPS-Unified Medication",
    "type": "object",
    "required": [
      "resourceType",
      "id",
      "code"
    ],
    "properties": {
      "resourceType": {
        "const": "Medication"
      },
      "id": {
        "type": "string",
        "pattern": "^[A-Za-z0-9\\-\\.]{1,64}$",
        "description": "simple ids preferred",
        "examples": ["med1, med2...medN"]
      },
      "code": {
        "$ref": "#/definitions/CodeableConcept"
      }
    },
    "definitions": {
      "CodeableConcept": {
        "type": "object",
        "required": ["coding"],
        "properties": {
          "coding": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/Coding"
            }
          }
        }
      },
      "Coding": {
        "type": "object",
        "required": ["system", "code", "display"],
        "properties": {
          "system": {
            "type": "string",
            "format": "uri"
          },
          "code": {
            "type": "string"
          },
          "display": {
            "type": "string"
          }
        }
      }
    }
  }
  