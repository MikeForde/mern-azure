{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/ipsdef/AllergyIntolerance.schema.json",
    "title": "NPS AllergyIntolerance",
    "type": "object",
    "required": [
      "resourceType",
      "id",
      "category",
      "criticality",
      "code",
      "patient",
      "onsetDateTime"
    ],
    "properties": {
      "resourceType": {
        "const": "AllergyIntolerance"
      },
      "id": {
        "type": "string",
        "pattern": "^[A-Za-z0-9\\-\\.]{1,64}$",
        "description": "simple ids preferred",
        "examples": ["allergy1, allergy2...allergyN"]
      },
      "category": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["food","medication","environment", "biologic"]
        },
        "minItems": 1,
        "maxItems": 1
      },
      "criticality": {
        "type": "string",
        "enum": ["low", "high", "unable-to-assess"]
      },
      "code": {
        "$ref": "#/definitions/CodeableConcept"
      },
      "patient": {
        "type": "object",
        "required": ["reference"],
        "properties": {
          "reference": {
            "type": "string",
            "pattern": "^Patient\\/[A-Za-z0-9\\-\\.]+$"
          }
        }
      },
      "onsetDateTime": {
        "type": "string",
        "format": "date-time",
        "description" : "The requirement for date-time, as opposed to just date has been validated on HL7 IPS Guide for this resource."
      }
    },
    "definitions": {
      "CodeableConcept": {
        "type": "object",
        "required": ["coding"],
        "properties": {
          "coding": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/Coding"
            }
          },
          "text": { "type": ["string", "null"] }
        },
        "additionalProperties": false
      },
      "Coding": {
        "type": "object",
        "required": ["system", "code", "display"],
        "properties": {
          "system": {
            "type": ["string", "null"]
          },
          "code": {
            "type": ["string", "null"]
          },
          "display": {
            "type": "string"
          }
        }
      }
    }
  }
  