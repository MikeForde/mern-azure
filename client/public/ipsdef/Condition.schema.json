{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/ipsdef/Condition.schema.json",
    "title": "IPS-Unified Condition",
    "type": "object",
    "required": [
      "resourceType",
      "id",
      "code",
      "subject",
      "onsetDateTime"
    ],
    "properties": {
      "resourceType": {
        "const": "Condition"
      },
      "id": {
        "type": "string",
        "pattern": "^[A-Za-z0-9\\-\\.]{1,64}$",
        "description": "simple ids preferred",
        "examples": ["condition1, condition2...conditionN"]
      },
      "code": {
        "$ref": "#/definitions/CodeableConcept"
      },
      "subject": {
        "type": "object",
        "required": ["reference"],
        "properties": {
          "reference": {
            "type": "string",
            "pattern": "^Patient\\/[A-Za-z0-9\\-\\.]+$"
          }
        }
      },
      "onsetDateTime": {
        "type": "string",
        "format": "date-time"
      }
    },
    "definitions": {
      "CodeableConcept": {
        "type": "object",
        "required": ["coding"],
        "properties": {
          "coding": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/Coding"
            }
          }
        }
      },
      "Coding": {
        "type": "object",
        "required": ["system", "code", "display"],
        "properties": {
          "system": {
            "type": "string",
            "format": "uri"
          },
          "code": {
            "type": "string"
          },
          "display": {
            "type": "string"
          }
        }
      }
    }
  }
  